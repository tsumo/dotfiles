[alias]
    co = checkout
    br = branch
    st = status
    lg = log --graph --oneline --all --decorate --full-history --color=always

[commit]
    verbose = true

[color]
    ui = true

[color "branch"]
    current = green reverse
    local = green
    remote = yellow

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = red

[diff]
    tool = nvimdiff

[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[difftool]
    prompt = false

