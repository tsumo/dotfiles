[alias]
    co = checkout
    br = branch
    st = status
    df = diff
    ds = diff --staged
    lg = log --pretty=format:'%C(yellow)%h%C(auto)%d%Creset %s %Cblue%cn (%ar)' --graph --all
    ci = commit --verbose

[commit]
    verbose = true

[color]
    ui = true

[color "branch"]
    current = green reverse
    local = green
    remote = yellow

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = red

[diff]
    tool = nvimdiff

[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[difftool]
    prompt = false
    # Abort all diffs with :cq
    trustExitCode = true

[include]
    path = .gitconfig.local

